<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowExtraDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_ext_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/number310"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:src="@drawable/cover"/>
        <ScrollView
            android:layout_below="@+id/img_ext_thumbnail"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_ext_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/number10"
                    android:layout_marginTop="@dimen/number10"
                    android:text="@string/add_txt_place_name"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_number25"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_ext_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_ext_title"
                    android:layout_marginLeft="@dimen/number10"
                    android:layout_marginTop="@dimen/number3"
                    android:textSize="@dimen/text_number20" />

                <TextView
                    android:id="@+id/txt_ext_detial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_ext_title2"
                    android:layout_marginLeft="@dimen/number10"
                    android:layout_marginTop="@dimen/number10"
                    android:text="@string/add_txt_place_detail"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_number25"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_ext_detial2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_ext_detial"
                    android:layout_marginLeft="@dimen/number10"
                    android:layout_marginTop="@dimen/number3"
                    android:textSize="@dimen/text_number20" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
